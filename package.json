{
  "name": "yandex_practicum",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run build && node index.ts",
    "build": "parcel build static/index.html",
    "dev": "parcel static/index.html  --port=3000 --open",
    "lint": "eslint --fix ./ --ext .ts",
    "stylelint": "stylelint  \"**/*.{css,less}\"",
    "stylelint:fix": "stylelint  \"**/*.{css,less}\" --fix",
    "prettier": "prettier --write ./ --ext .ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix ./ --ext .ts"
    ],
    "*.(css|less)": [
      "stylelint  \"**/*.{css,less}\" --fix"
    ]
  },
  "author": "drozdovdn",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.2",
    "nanoid": "^3.2.0",
    "parcel": "^2.1.0"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.2.0",
    "@parcel/transformer-less": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "autoprefixer": "^10.4.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.1",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "parcel-reporter-static-files-copy": "^1.3.4",
    "postcss": "^8.4.5",
    "postcss-custom-properties": "^12.0.4",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-url": "^10.1.3",
    "prettier": "2.5.1",
    "stylelint": "^13.13.1",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-less": "^1.0.1",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "^4.5.4"
  },
  "staticFiles": {
    "staticPath": "./static/icons",
    "watcherGlob": "**"
  },
  "engines": {
    "node": "14.18.3",
    "parsel": "2.1.0"
  }
}
